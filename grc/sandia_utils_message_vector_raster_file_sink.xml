<?xml version="1.0"?>
<block>
  <name>Message Vector Rasterized File Sink</name>
  <key>sandia_utils_message_vector_raster_file_sink</key>
  <category>[Sandia]/Sandia Utilities</category>
  <import>import sandia_utils</import>
  <make>sandia_utils.message_vector_raster_file_sink($filename, $n_rows)</make>

  <param>
    <name>Filename</name>
    <key>filename</key>
    <type>file_save</type>
  </param>
  <param>
    <name>Rows</name>
    <key>n_rows</key>
    <type>int</type>
  </param>

  <sink>
    <name>in</name>
    <type>message</type>
  </sink>

  <doc>
Save message vector data to file, with a buffer to save n_rows of data.
  </doc>

</block>
